<odoo>

    <record id="product_template_form_view_inherit_website_sale_stock" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale_stock.product_template_form_view_inherit_website_sale_stock" />
        <field name="arch" type="xml">
            <field name="custom_message" position="after">
                <field name="custom_message"
                       attrs="{'invisible': [('inventory_availability', '!=', 'always_no_lock')]}"/>
            </field>
            <xpath expr="//field[@name='available_threshold']" position="attributes">
                <attribute name="attrs">{'invisible':
                    [('inventory_availability', 'not in', ['threshold', 'always_no_lock'])],
                    'required':
                    [('inventory_availability', 'in', ['threshold','always_no_lock']),
                    ('type', '=', 'product')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='virtual_available']/../../.." position="after">
                <button type="object"
                    name="action_product_product_free_qty"
                    attrs="{'invisible':[('type', '!=', 'product')]}"
                    context="{'default_product_tmpl_id': id}"
                    class="oe_stat_button" icon="fa-cubes">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="free_qty" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">Free Quantity</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
